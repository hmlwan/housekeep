.about{
		width: 94%;
		margin: 0 auto 40rpx;
		font-size: 32rpx;
}

.about_con{
		text-indent:2em;
		line-height: 50rpx
}
.culture{
		background-color: #f5f5f5;
		text-align: center;
}
.culture_title{
		font-size: 45rpx;
		font-weight: bold;
		text-align: center;
		margin: 40rpx 0;
}
.culture_item{
		justify-content: space-around;
		flex-grow: 3;
		padding-bottom: 40rpx;
}
.culture_item text{
		font-size:40rpx;
		font-weight:bold;
		width: 180rpx;
		height: 180rpx;
		border-radius: 50%;
		background-color: #ff8900;
		color:#fff;
		text-align: center;
		line-height: 180rpx
}
.purpose{
		width: 100%;
		font-size: 30rpx;
		margin-bottom: 50rpx
}
.purpose_img{
		flex-wrap: wrap;
		flex-flow: 2;
		justify-content: space-around;
}
.purpose_img image{

		height: 300rpx;
		width: 300rpx;
		border-radius: 50%;
		margin-top: 20rpx;
}
