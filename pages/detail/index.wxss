/* pages/detail/index.wxss */
.detail_bkg{
		background-color: #f5f5f5;
    float: left;
}
.detail_con{
		width: 90%;
		margin: 0 auto;
		font-size: 30rpx;
}
.ayi_bgk image{
		width: 100%;
		height: 600rpx
}
.ayi_bgk .ayi_name{
		font-size: 40rpx;
		color:#ff8900;
		margin: 25rpx 0;
		font-weight: bold;
}
/* 简历 */
.resume{
    background-color: #fff;
		width: 100%;
		padding: 40rpx 0;
    float: left;
    position: relative;
    margin-bottom:50rpx; 
}
.resume::after{
    content: '';
    position: absolute;
    top:8%;
    left: 50%;
    width: 3px;
    background-color: #f5f5f5;
    height: 85%
}
.resume .resume_item{
		width: 38%;
		padding:15rpx 40rpx  ;
    float:left;
}
/*工作经历 */
.work{
    background-color: #fff;
    text-align: center;
    width: 100%;
}
.work_item{
    height: 150rpx;
    flex-wrap: wrap;
    flex-grow: 2;
    align-items:center;
   
}
.work_item label{
    width: 50%;
    font-weight: bold;
    border-right:#f5f5f5  2px solid;
    border-bottom:#f5f5f5  2px solid;

}
.work_item text{
    width: 50%;
    border-bottom:#f5f5f5  2px solid;
}





