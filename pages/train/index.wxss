/* pages/train/index.wxss */
/* top图 */
.top_bkg image{
		width: 100%;
		height: 450rpx
}
/* 种类 */
.trian_type{
		flex-wrap: wrap;
		justify-content:space-around;
		text-align: center;
		margin: 50rpx auto;
}
.trian_type text{
		padding: 10rpx 30rpx;
		border: 2px solid #cacaca;
		border-radius: 50rpx;
		font-size: 30rpx;
}
.trian_type .active{
		background-color:#ff8900;
		border:2px solid #ff8900;
		color:#fff;
}
/* 类别 */
.train_cate{
		width: 90%;
		margin: 0 auto 40rpx;
		font-size: 28rpx;
}
.train_item{
		padding: 40rpx 0;
		border-bottom: 2px solid #e5e5e5;

}
.train_item image{
		width: 100%;
		height: 400rpx;
}
.train_item .train_title{
		font-size: 35rpx;
		font-weight: bold;
		padding: 30rpx 0;
}
/* 选课专区 */
.xk{
		margin:40rpx auto;
		text-align: center;
		font-size: 30rpx;
		background-color: #f5f5f5;
		width: 90%
}
.xk .input-form {
		margin-top: 40rpx;
		padding-bottom: 50rpx;
}
.xk .input-form text:first-child{
		font-size: 35rpx;
		font-weight: bold;
}
.input-form .form-control{
		width: 90%;
		text-align: left;
		background-color:#fff;
		height: 80rpx;
		line-height: 80rpx;
		margin: 20rpx auto 0;
		padding-left:20rpx;
}
.chose_item{
		margin: 20rpx 0 50rpx;
		flex-wrap: wrap;
		font-size: 28rpx;
		flex-grow: 2;
		justify-content: space-around;
		text-align:left;

}
.flex_row label{
		width: 40%;
		margin-top: 20rpx;
}
.sub_btn{
		width: 90%;
		margin: 0 auto;
		background-color: #fff;
		color:#ff9820;
		font-weight: bold;
		border: 1px solid #ff9820;
		height:80rpx;
		line-height:80rpx;

}














