/* pages/find/index.wxss */
.top_logo{
		display: flex;
	  flex-direction: row;
		width: 100%;
		height: 120rpx;
	  justify-content: space-between;
		align-items: center;
}
.top_logo .l_logo{
		height: 80rpx;
		width: 50%;
		margin-left:25rpx; 
}
.top_logo .r_logo_icon{
		height: 80rpx;
		width: 10%;
		margin-right:25rpx; 
}
/* 背景图 */
.top_bgk image{
		width: 100%;
		height: 350rpx;
}
/* 标题 */
.top_title{
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 94%;
		margin: 20rpx auto 40rpx;
}
.top_title text{
		font-size: 28rpx;
 }
 .top_title text:first-child{
	 	font-size: 40rpx;
		font-weight: bold;
		margin-bottom: 15rpx;
 }
/* 评论 */
.pinlun_list{
		display: flex;
		flex-direction: column;
		width: 96%;
		height: 800rpx;
		margin: 0 auto 80rpx;
}
.pinlun_list image{
		width: 100%;
		margin-bottom: 15rpx;
}
/* 在线选阿姨 */
.choice_ayi{
	display: flex;
	flex-direction: column;
	background-color: #f5f5f5;
	width: 100%;
	align-items: center;
}
.choice_ayi .choice_title{
	font-size: 40rpx;
	font-weight: bold;
	padding: 50rpx 0;
}















