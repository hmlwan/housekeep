.tea_item{
		width: 94%;
		margin: 0 auto 40rpx;
}
.tea_item image{
		width: 100%;
		height: 650rpx;
}
.tea_con{
		font-size: 28rpx;
		padding: 20rpx 20rpx 30rpx ;
}
.tea_con .name{
		font-size: 40rpx;
		font-weight: bold;
		padding-bottom: 20rpx;
		position: relative;
}
.tea_con .name:after{
		content:'';
		position: absolute;
		left: 0;
		bottom:0;
		width: 30px;
		height: 3px;
		background-color: #ff8900
}
.tea_con .position{
		font-size:32rpx;
		margin-bottom: 18rpx;
		margin-top: 20rpx;
}
