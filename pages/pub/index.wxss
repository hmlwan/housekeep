/* pages/pub/index.wxss */
/* 阿里图标样式*/
@import "/static/ali_icon/iconfont.wxss"; 
.top_bkg image{
		width: 100%;
		height: 250rpx;		
}
/* 高单发布 */
.pub{
		width: 100%;
		background-color: #f5f5f5;
		padding: 40rpx 0;
}
.pub .gdfb{
		width:100%;
		display:inline-block;
		text-align: center;
		font-size: 40rpx;
		font-weight: bold;
		margin-bottom: 40rpx;
}
page{
		position: relative;
}
.pub .pub_item{
		background-color: #fff;
		width: 85%;
		margin: 0 auto 20rpx;
		border-bottom:3px solid #ff8900;
		font-size: 30rpx;
		padding: 40rpx 30rpx ;
}
.pub_item .pub_title{
		font-size: 40rpx;
		font-weight: bold;
		padding-bottom: 35rpx;
}

.pub_require_1{
		justify-content: space-around;
		padding-bottom: 20rpx;
		border-bottom: 2px solid #f5f5f5;
		align-items: center
}
.pub_require_1 text{
		display: inline-block;
		font-size: 28rpx;
}

.pub_require_2 .task_title{
		font-size: 45rpx;
		color:#ff8904;
		padding: 20rpx 0; 

}
.task_title  text{
		color:#2c2c2c;
		margin-left:5rpx;
		font-size: 35rpx;
}
.task_item{
		font-size: 30rpx;
		padding-left: 20rpx;
		margin-bottom: 40rpx;
}
.task_item text{
		padding-bottom: 5rpx;
}
.pub_lx{
		justify-content: space-between;
}
.pub_lx .lxfs{
		font-size: 38rpx;
		font-weight: bold;
}
.sub_btn button{
		background-color: #e6454a;
		color:#fff;
		margin-top: 25rpx;
		border-radius:0;
}
